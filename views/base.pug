doctype html
html 
    head
        block head
            title Niloy's Fitness

            block style 
                style 
                    include ../static/base.css 
        
            link(href="https://fonts.googleapis.com/css2?family=Playball&display=swap" rel="stylesheet")

            link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous")

            link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css")

            link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")

    body
        block content
            nav.header
                | <!-- Left box for logo -->
                div.left
                    img(src="../static/img/fitness-1882721.jpg" alt="")
                    div
                        | Niloy Fitness
        
                | <!-- Mid box for navbar -->
                div.middle
                    ul.navbar
                        li #[a(href="/") Home]
                        li #[a(href="/about") About Us]
                        li #[a(href="/fitcal") Fitness Calculator]
                        li #[a(href="/contact") Contact Us]
                | <!-- Right box for buttons -->
                div.right
                    if !user
                        button(type="button" class="btn btn-secondary mx-1" data-bs-toggle="modal" data-bs-target="#exampleModal-2")
                            | Login
            
                        button(type="button" class="btn btn-secondary mx-1" data-bs-toggle="modal" data-bs-target="#exampleModal-1")
                            | SignUp
                    else 
                        a(role="button" class="btn btn-secondary mx-1" href="/logout")
                            | Logout
            if message 
                div(class="alert alert-" + message.type + " alert-dismissible fade show" id="message" role="alert")
                    strong #{message.intro}  
                    |#{message.message}
            
            else 
                div(class="alert alert-success alert-dismissible fade show my-5" role="alert")
                    strong Successful! 
                    |You have successfully Loggedout

            | <!-- Modal For SignUp -->
            div(class="modal fade" id="exampleModal-1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true")
                div.modal-dialog
                    div.modal-content
                        div.modal-header
                            h5(class="modal-title" id="exampleModalLabel") SignUp For An Account
                            button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
                
                        div.modal-body
                            form(action="/signup", method="POST")
                                div.mb-3
                                    label(for="signupUserName" class="form-label") Username:
                                    input(type="userName" name="signupUserName" class="form-control" id="signupUserName" aria-describedby="emailHelp")
                            
                                div.mb-3
                                    label(for="name" class="form-label") Name:
                                    input(type="name" name="name" class="form-control" id="name" aria-describedby="emailHelp")
                        
                                div.mb-3.col-8
                                    label(for="email" class="form-label") Email:
                                    input(type="email" name="email" autocomplete="current-email" class="form-control" id="email" aria-describedby="emailHelp")
                        
                                div.mb-3.col-6
                                    label(for="signupPassword" class="form-label") Password:
                                    div.container-fluid.g-0.d-flex
                                        input(type="password" name="signupPassword" autocomplete="current-password" class="form-control mx-2 inputPassword" id="signupPassword")
                                        div(toggle="#password-field" class="fa fa-fw fa-eye field_icon toggle-password my-2" id="togglePassword")

                                div.mb-3.col-6
                                    label(for="signupConfirmPassword" class="form-label") Confirm Password:
                                    input(type="password" name="signupConfirmPassword" autocomplete="current-password" class="form-control mx-2" id="signupConfirmPassword")       
                            
                                button(type="submit" class="btn btn-danger") SignUp
                    
                        div.modal-footer
                            button(type="button" class="btn btn-secondary" data-bs-dismiss="modal") Close
              
            | <!-- Modal For Login  -->
            div(class="modal fade" id="exampleModal-2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true")
                div.modal-dialog
                    div.modal-content
                        div.modal-header
                            h5(class="modal-title" id="exampleModalLabel") Login To Your Account
                            button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
                
                        div.modal-body
                            form(action="/login", method="POST")
                                div.mb-3
                                    label(for="userName" class="form-label") Username:
                                    input(type="text" name="loginUserName" autocomplete="current-username" class="form-control" id="loginUserName" aria-describedby="emailHelp")
                        
                                div.mb-3.col-6
                                    label(for="loginPassword" class="form-label") Password:
                                    div.container-fluid.g-0.d-flex
                                        input(type="password" name="loginPassword" autocomplete="new-password" class="form-control mx-2 inputPassword" id="loginPassword")
                                        div(toggle="#password-field" class="fa fa-fw fa-eye field_icon toggle-password my-2" id="togglePassword")
                

                                button(type="submit" class="btn btn-danger") Login

                                div.newUser 
                                    h4.mt-3 New User? #[a(class="showPage" onClick="showSignupPage()") Signup]
                        div.modal-footer
                            button(type="button" class="btn btn-secondary" data-bs-dismiss="modal") Close


        
        div.footer
            p Copyright &copy; iBlog.com
            a(href="https://pixabay.com/images/id-849826/") Pixabay.com
    

    block script 
        script(src="../static/index.js") 
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous")
        script(src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous")